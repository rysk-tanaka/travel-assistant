# TravelAssistant 環境変数設定
# このファイルを .env にコピーして、実際の値を設定してください

# ===== 必須設定 =====

# Discord Bot設定
# Discord Developer Portal (https://discord.com/developers/applications) から取得
DISCORD_TOKEN=your_discord_bot_token_here

# GitHub設定
# Personal Access Token を https://github.com/settings/tokens から作成
# 必要な権限: repo (Full control of private repositories)
GITHUB_TOKEN=your_github_personal_access_token_here
GITHUB_REPO_NAME=travel-assistant-data
GITHUB_USERNAME=your_github_username
GITHUB_BRANCH=main

# ===== オプション設定 =====

# OpenWeatherMap API設定（天気予報機能用）
# https://openweathermap.org/api から無料で取得可能（1日1000回まで）
WEATHER_API_KEY=your_openweathermap_api_key_here

# Claude API設定（AI機能用）
# https://console.anthropic.com/ から取得
CLAUDE_API_KEY=your_claude_api_key_here

# ===== 開発設定 =====

# デバッグモード (True/False)
DEBUG=False

# ログレベル (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Discord開発サーバーID（テスト用）
# スラッシュコマンドの即時同期に使用
DEV_GUILD_ID=

# ===== データ保存設定 =====

# ローカルデータ保存パス
USER_DATA_PATH=./data/user_data
TEMPLATE_PATH=./src/templates

# ===== 機能フラグ =====

# 各機能のON/OFF（True/False）
ENABLE_WEATHER_API=False
ENABLE_CLAUDE_API=False
ENABLE_GITHUB_SYNC=False
ENABLE_DEBUG_COMMANDS=True
